<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Liquid Glass Card Style -->
    <style name="LiquidGlassCard">
        <item name="android:background">@drawable/glass_card_background</item>
        <item name="android:elevation">0dp</item>
    </style>

    <!-- Glass Button Style -->
    <style name="GlassButton" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/glass_button_background</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- Glass Text Style -->
    <style name="GlassText">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="GlassText.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="GlassText.Subtitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="GlassText.Body">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
</resources>

