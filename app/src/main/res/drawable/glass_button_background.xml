<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <layer-list>
            <!-- Glass base layer -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/button_glass_pressed" />
                    <corners android:radius="16dp" />
                </shape>
            </item>
            
            <!-- Glass border -->
            <item>
                <shape android:shape="rectangle">
                    <stroke 
                        android:width="1dp" 
                        android:color="@color/card_glass_border" />
                    <corners android:radius="16dp" />
                </shape>
            </item>
            
            <!-- Top highlight -->
            <item android:top="0dp" android:bottom="70%">
                <shape android:shape="rectangle">
                    <gradient
                        android:type="linear"
                        android:angle="90"
                        android:startColor="@color/glass_layer_medium"
                        android:endColor="#00FFFFFF" />
                    <corners android:radius="16dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- Normal state -->
    <item>
        <layer-list>
            <!-- Glass base layer -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/button_glass_normal" />
                    <corners android:radius="16dp" />
                </shape>
            </item>
            
            <!-- Glass border -->
            <item>
                <shape android:shape="rectangle">
                    <stroke 
                        android:width="1dp" 
                        android:color="@color/card_glass_border" />
                    <corners android:radius="16dp" />
                </shape>
            </item>
            
            <!-- Top highlight -->
            <item android:top="0dp" android:bottom="70%">
                <shape android:shape="rectangle">
                    <gradient
                        android:type="linear"
                        android:angle="90"
                        android:startColor="@color/glass_layer_light"
                        android:endColor="#00FFFFFF" />
                    <corners android:radius="16dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>

